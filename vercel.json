{
  "version": 2,
  "builds": [
    {
      "src": "public/index.php", 
      "use": "@vercel/php" 
    }
  ],
  "rewrites": [
    { "source": "/(.*)", "destination": "/public/$1" }
  ],
  "build": {
    "commands": [
      "curl -sS https://getcomposer.org/installer | php", 
      "php composer.phar install --no-dev --optimize-autoloader", 
      "npm install", 
      "npm run build", 
      "php artisan migrate --force"
    ]
  }
}
